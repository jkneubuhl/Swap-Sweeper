- @offerings.each do |offer|
  .offer-row
    .offer-thumb
      - if offer.thumb_url
        = image_tag offer.thumb_url
      - else
        = image_tag 'blank_thumb.png'
    .offer-title-col
      %div= link_to offer.name, offer, :class => 'title-link'
      %div= "Created #{offer.created.strftime( "%B %e, %Y" )}"
      - if offer.current_auction
        %div= "Bids: #{ offer.current_auction.bids.size }"
      - else
        %div= "Auction Closed"
    .offer-control-col
      .link-button= link_to 'Edit', '#', :class => 'title-link'
      .link-button= link_to 'Delete', {:action => 'xdestroy', :id => offer.id.to_s}, :class => 'title-link'