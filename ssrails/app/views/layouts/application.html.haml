%html
  %head
    %title Swap Sweep
    = stylesheet_link_tag :all


    = csrf_meta_tag
    %script( type='text/javascript' src='http://connect.facebook.net/en_US/all.js' ) 
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' 
    - if request[:action] == 'show' && request[:controller] == 'offerings'
      = stylesheet_link_tag 'pikachoose/bottom'
      = javascript_include_tag 'pikachoose/lib/jquery.pikachoose.js'
    = javascript_include_tag :defaults
    = javascript_include_tag params[:controller]
    = render 'head'
%body
  #main-page
    = render 'layouts/heading' 
    = yield
