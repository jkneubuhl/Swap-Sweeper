%html
  %head
    %title Swap Sweep
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'css/smoothness/jquery-ui-1.8.10.custom.css'

    = csrf_meta_tag
    %script( type='text/javascript' src='http://connect.facebook.net/en_US/all.js' ) 
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' 
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.10/jquery-ui.min.js'

    - if request[:action] == 'show' && request[:controller] == 'offerings'
      = stylesheet_link_tag 'pikachoose/bottom'
      = javascript_include_tag 'pikachoose/lib/jquery.pikachoose.js'
    = javascript_include_tag :defaults
    = javascript_include_tag params[:controller]
    = render 'head'
%body
  #main-page
    = render 'layouts/heading' 
    = yield
#fb-root
:javascript
  fnFacebookInit();







