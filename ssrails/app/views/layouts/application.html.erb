<!DOCTYPE html>
<html>
<head>
  <title>Swap Sweep</title>
  <%= stylesheet_link_tag :all %>
  <script  type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'></script>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="global-container">
    <div id="global-left-panel">
      <div>
        <%= image_tag 'logo.png', :border => 0 %>
      </div>
      <div id="global-menu-panel">
        <div class="menu-item">
          <%= image_tag 'home_selected.png', :border => 0 %>
          <%= image_tag 'home_unselected.png', :border => 0, :style => 'display:none;' %>
        </div>
        <div class="menu-item">
          <%= image_tag 'offers_selected.png', :border => 0, :style =>
          'display:none;' %>
          <%= image_tag 'offers_unselected.png', :border => 0 %>
        </div>
      </div>
    </div>
    <div id="global-divider">
      &nbsp;
    </div>
    <div id="global-right-panel">
<%= yield %>
    </div>
  </div>

</body>
</html>
